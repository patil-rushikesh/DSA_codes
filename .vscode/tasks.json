{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "buildAndRun",
            "command": "C:/Program Files/Git/bin/bash.exe",
            "args": [
                "-c",
                "\"c:/MinGW/bin/g++.exe -fdiagnostics-color=always -g '${file}' -o '${fileDirname}//${fileBasenameNoExtension}.exe'\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
